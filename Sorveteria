print('BEM VINDO À SORVEETERIA PY \n')

def escolhaCardapio():
    card = 1
    while card != 0:
        print("ESCOLHA SEU CARDÁPIO\n")
        print(" > Digite 1 para abrir o caradápio de Sorvete")
        print(" > Digite 2 para abrir o cardápio de Açai")
        print(" > Digite 0 para encerrar pedido")

        card = int(input(" Escolha: "))
        controleCard(card) if card != 0 else ''
    if card == 0:
        print("FIM DO PEDIDO!!!")

def openCardapio(card):
    if card == 1:
        cardSorvete()
    elif card == 2:
        cardAcai()


def cardSorvete():
    sabores = list()
    sabores.append('Chocolate')
    sabores.append('Baunilha')
    sabores.append('Flocos')
    sabores.append('Morango')
    return sabores

def cardAcai():
    complementos = list()
    complementos.append('Castanha')
    complementos.append('Amendoim')
    complementos.append('Banana')
    complementos.append('Achocolatado')
    return complementos

def fimPedido():  # nessa função quando for encerrar vai fazer o calculo dos itens pedidos
    print("fim")  # só para ter alguma coisa

def controleCard(card): # para limitar
    if card > 0 and card <= 2:
        openCardapio(card)
    else:
        print ('Escolha inválida')

def tamanhosPreco(): 
    print('DIGITE O NÚMERO CORRESPONDENTE: ')
    print('1 - PEQUENO = 200ml = 4reais ')
    print('2 - MEDIO = 400ml = 7reais')
    print('3 - GRANDE = 600ml = 10reais')
    
    tam = int(input('Escolha o tamanho: (pequeno - 1 /medio - 2/grande - 3)'))
    preco = 0
    if tam == 1: 
        preco = 4 
    elif tam == 2:
        preco = 7
    elif tam == 3:
        preco = 10
    else:
        print('Opção inválida')
        

          
